<template>
  <div v-dialogdrag>
    <el-dialog :title="(is_edit ? '修改':'添加')+'招聘记录'" v-model="is_show" width="500px">
      <el-form
        :model="saveForm"
        :rules="rules"
        ref="saveForm"
        label-width="130px"
      >
        <el-scrollbar height="500px" style="padding-right:20px">
          <el-form-item label="招聘人员">{{saveForm.recruiter}}</el-form-item>
          <el-form-item label="部门" prop="department">
            <el-select v-model="saveForm.department" placeholder="请选择">
              <el-option v-for="(item,key) in departmentOption" :key="key" :label="item" :value="item" ></el-option>
            </el-select>
          </el-form-item>
          <el-form-item label="应聘岗位" prop="post"><el-input v-model.trim="saveForm.post" maxlength="25"></el-input></el-form-item>
          <el-form-item label="应聘渠道" prop="channel"><el-input v-model.trim="saveForm.channel" maxlength="25"></el-input></el-form-item>
          <el-form-item label="姓名" prop="name"><el-input v-model.trim="saveForm.name" maxlength="20"></el-input></el-form-item>
          <el-form-item label="性别" prop="sex">
            <template v-for="(item,key) in sexOption" :key="key">
              <el-radio v-model="saveForm.sex" :label="item" >{{item}}</el-radio>
            </template>
          </el-form-item>
          <el-form-item label="出生年月/年龄" prop="age"><el-input v-model.trim="saveForm.age" maxlength="10"></el-input></el-form-item>
          <el-form-item label="联系电话" prop="tel"><el-input v-model.trim="saveForm.tel" maxlength="20"></el-input></el-form-item>
          <el-form-item label="学历" >
            <el-select v-model="saveForm.education" placeholder="请选择">
              <el-option v-for="(item,key) in educationOption" :key="key" :label="item" :value="item" ></el-option>
            </el-select>
          </el-form-item>
          <el-form-item label="工作年限" prop="workExp"><el-input v-model.trim="saveForm.workExp" maxlength="10"></el-input></el-form-item>
          <el-form-item label="目前职务" prop="currentPost"><el-input v-model.trim="saveForm.currentPost" maxlength="10"></el-input></el-form-item>
          <el-form-item label="目前公司" prop="currentCompany"><el-input v-model.trim="saveForm.currentCompany" maxlength="50"></el-input></el-form-item>
          <el-form-item label="薪资要求" prop="salaryRequire"><el-input v-model.trim="saveForm.salaryRequire" maxlength="50"></el-input></el-form-item>
          <el-form-item label="类型" prop="source"><el-input v-model.trim="saveForm.source" maxlength="50"></el-input></el-form-item>
          <el-form-item label="电话结果" prop="telResult"><el-input v-model.trim="saveForm.telResult" maxlength="50"></el-input></el-form-item>
          <el-form-item label="电话邀约情况" prop="description"><el-input v-model.trim="saveForm.description"></el-input></el-form-item>
          <el-form-item label="是否到面" prop="isArrive">
            <template v-for="(item,key) in judgmentOption" :key="key">
              <el-radio v-model="saveForm.isArrive" :label="key">{{item}}</el-radio>
            </template>
          </el-form-item>
          <el-form-item label="初试评价" prop="firstTest"><el-input v-model.trim="saveForm.firstTest"></el-input></el-form-item>
          <el-form-item label="初试结果" prop="firstResult"><el-input v-model.trim="saveForm.firstResult"></el-input></el-form-item>
          <el-form-item label="推荐接收人" prop="recommender"><el-input v-model.trim="saveForm.recommender" maxlength="25"></el-input></el-form-item>
          <el-form-item label="复试评价" prop="secondTest"><el-input v-model.trim="saveForm.secondTest"></el-input></el-form-item>
          <el-form-item label="是否录用" prop="isHire">
            <template v-for="(item,key) in judgmentOption" :key="key">
              <el-radio v-model="saveForm.isHire" :label="key" >{{item}}</el-radio>
            </template>
          </el-form-item>
          <el-form-item label="预计报到时间" prop="checkinExpect"><el-input v-model.trim="saveForm.checkinExpect" maxlength="10"></el-input></el-form-item>
          <el-form-item label="是否报到" prop="isCheckin">
            <template v-for="(item,key) in judgmentOption" :key="key">
              <el-radio v-model="saveForm.isCheckin" :label="key" >{{item}}</el-radio>
            </template>
          </el-form-item>
          <el-form-item label="实际报到时间" prop="checkinActual"><el-input v-model.trim="saveForm.checkinActual" maxlength="10"></el-input></el-form-item>
          <el-form-item label="转正时间" prop="regularTime"><el-input v-model.trim="saveForm.regularTime" maxlength="10"></el-input></el-form-item>
          <el-form-item label="是否通过转正" prop="isRegular">
            <template v-for="(item,key) in judgmentOption" :key="key">
              <el-radio v-model="saveForm.isRegular" :label="key" >{{item}}</el-radio>
            </template>
          </el-form-item>
          <el-form-item label="备注" prop="remark">
            <vxe-textarea v-model="saveForm.remark" resize="vertical"></vxe-textarea>
          </el-form-item>
        </el-scrollbar>
        <el-form-item style="padding-top: 10px;">
          <el-button type="primary" @click="submitForm('saveForm')">保存</el-button>
          <el-button @click="is_show = false;this.$refs['saveForm'].resetFields();">取消</el-button>
        </el-form-item>
      </el-form>
    </el-dialog>
  </div>
</template>
<script>
export default {
  components: {},
  data() {
    return {
      is_edit: false,
      is_show: false,
      sexOption: {},
      departmentOption:[],
      saveForm: {
        department:"",
        post:"",
        channel:"",
        name:"",
        sex:"",
        age:"",
        tel:"",
        education:"",
        workExp:"",
        currentPost:"",
        currentCompany:"",
        salaryRequire:"",
        source:"",
        telResult:"",
        description:"",
        isArrive:"",
        firstTest:"",
        firstResult:"",
        recommender:"",
        secondTest:"",
        isHire:"",
        checkinExpect:"",
        isCheckin:"",
        checkinActual:"",
        regularTime:"",
        isRegular:"",
        remark:"",
      },
      rules: {
        department: [{ required: true, message: "请选择部门", trigger: "blur" }],
        post: [{ required: true, message: "请输入应聘岗位", trigger: "blur" }],
        name: [{ required: true, message: "请输入姓名", trigger: "blur" }],
      },
    };
  },
  methods: {
    submitForm(formName) {
      this.$refs[formName].validate((valid) => {
        if (valid) {
          var func = this.saveForm.id ? this.api.hr.RecruitmentReport.Edit : this.api.hr.RecruitmentReport.Add
          func(this.saveForm).then((res) => {
            if (res.data.code == 200) {
              this.is_show = !this.is_show;
              this.$emit("page_list");
              this.$message.success("修改成功");
            }
          });
        } else {
          console.log("error submit!!");
          return false;
        }
      });
    },
  },
};
</script>
